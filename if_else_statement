//Example of if else statement
//By niqabytedev

#include <iostream>
using namespace std;
int main()
{
int x, y, z, min, max;
	cout << "enter 3 numbers" << endl;
	cin >> x >> y >> z;

	if (x > y && x > z) {
		max = x;
		min = (y < z) ? y : z;
	}
	else if (y > z && y > x) {
		max = y;
		min = (x < z) ? x : z;
	}
	else {
		max = z;
		min = (x < y) ? x : y;
	}
	cout << "max number is " << max << endl;
	cout << "min number is " << min << endl;
}
