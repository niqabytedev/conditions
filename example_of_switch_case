#include <iostream>
using namespace std;
int main()
{
	char islemturu;
	float x, y;
	cout << "bir operator seciniz +,-,*,/" << endl;
	cin >> islemturu;
	cout << "iki sayi giriniz\n";
	cin >> x >> y;
	switch (islemturu)
	{
	case '+':cout << "\nx+y=" << x + y; break;
	case '-':cout << "\nx-y=" << x - y; break;
	case '*':cout << "\nx*y=" << x * y; break;
	case '/':cout << "\nx/y=" << x / y; break;
	default:cout << "yanlis secim";
	}
	return 0;
}
